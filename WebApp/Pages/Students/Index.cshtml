@page
@model WebApp.Pages.Students.IndexModel

@{
    ViewData["Title"] = "Index";
}
<head>
    <link rel="stylesheet" href="~/css/linkButtons.css" asp-append-version="true" />
</head>
<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].BirthDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Student) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>

                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>

            <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="linkbutton">Промени</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id" class="linkbutton">Детайли</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="linkbutton">Премахни</a>
            </td>
        </tr>
}
    </tbody>
</table>
